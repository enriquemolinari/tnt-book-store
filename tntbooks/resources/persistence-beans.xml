<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/tx
		http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">

	<bean id="tntBooks" class="ar.cpfw.tntbooks.model.TntBookStore">
		<property name="customerAgenda" ref="customerAgenda" />
		<property name="bookCatalog" ref="bookCatalog" />
	</bean>

	<bean id="bookCatalog" class="ar.cpfw.tntbooks.persistence.HibernateBookCatalog">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<bean id="customerAgenda" class="ar.cpfw.tntbooks.persistence.HibernateCustomerAgenda">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<bean id="salesNotebook" class="ar.cpfw.tntbooks.persistence.HibernateSalesNotebook">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<!-- interceptor -->
	<bean id="dependencyInjector" class="ar.cpfw.tntbooks.persistence.HibernateDIInterceptor">
		<property name="timeProvider" ref="timeProvider" />
	</bean>

</beans>